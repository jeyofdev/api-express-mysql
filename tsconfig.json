{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "lib": ["DOM", "ES2015"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "files": ["src/index.ts"],
  "include": [
    "src/types/**/*",
    "src/config/**/*",
    "src/routes/**/*",
    "src/models/**/*",
    "src/controllers/**/*",
    "src/@types/**/*",
    "src/utils/**/*"
  ]
}
